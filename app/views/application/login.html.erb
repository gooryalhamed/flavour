<div class="form">
		<%= form_tag recipes_path do %>
		<div class="inner">
			<div class="input">
			<label>Username: </label>
				<%= text_field_tag :username %><br>
			</div>
			<div class="input">
				<label>Password: </label>
				<%= text_field_tag :password %><br>
			</div>
			<div class="input">
				<label>Secret Number: </label>
				<%= text_field_tag :secret_num %><br>
				<span>
					<a href="#" target="_blank">forget password? </a>
				</span>
			</div>
				<div >
					<%= submit_tag "create" %>
				</div>	
			</div>
		<% end %>
	</div>
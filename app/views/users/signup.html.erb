<!DOCTYPE html>
<html>
<head>
	<title>Sign-Up</title>
</head>
<body>
	<div class="container">
		<p class="lblcontainer">sign up for a new account</p>
		<%= form_for(@user) do |f| %>
		<table>
		<tr>
			<td><%= f.label :name %></td>
			<td><%= f.text_field :name %></td>	
		</tr>
		<tr>
			<td><%= f.label :password %></td>
			<td><%= f.password_field :password %></td>
		</tr>
			<tr>
				<td><%= f.label :confirmation %></td>
				<td><%= f.password_field :password_confirmation %></td>	
			</tr>
			</table>
			<div id="firstbtn"><%= f.submit value: "create" %></div>
		<% end %>
		<a href="/"><input type="submit" value="home"></a>
		<div class="notice"><%= notice %></div>
	</div>
</body>
</html>








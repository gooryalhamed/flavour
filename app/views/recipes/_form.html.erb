<div id="container">
<%= form_for(@recipe) do |f| %>
	<% if @recipe.errors.any? %>
		<div id="error_explan">
			<%= pluralize(@recipe.errors.count, "error")%> prohibited this recipe from being saved:
			<ul>
				<% @recipe.errors.full_messages.each do |msg| %>
				<li> <%= msg %> </li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %><br>
	</div>
	<div class="field">
		<%= f.label :description %>
		<%= f.text_field :description %><br><br>
	</div>
	<div class="field">
		<%= f.label :category %>
		<%= f.collection_select(:category_id, Category.all, :id, :name) %><br><br>
	</div>
		
	<div class="field">
		<%= f.label :ingredients %>
	<%= f.collection_check_boxes :ingredient_ids,Ingredient.all, :id, :name %><br><br>
		</div>
		
	<div class="field">
		<%= f.label :preparation %>
		<%= f.text_area :preparation %>
		<br><br>
	</div>


	<div class="actions"><%= f.submit %></div>
	
<% end %>
</div>